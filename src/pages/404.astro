---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";

const title = "404 - Page Not Found";
const description = "The page you're looking for doesn't exist.";
---

<Layout title={title} description={description}>
  <div class="container px-4 py-24 mx-auto">
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
      <h1 class="text-9xl font-extrabold text-primary mb-4">404</h1>
      <h2 class="text-3xl font-bold mb-4">Lost in Tokyo... I mean, the internet</h2>
      <p class="text-lg text-muted-foreground mb-4 max-w-md">
        This page doesn't exist. Like a perfectly bug-free Rails app on the first try.
      </p>
      <p class="text-sm text-muted-foreground/80 mb-8 max-w-md italic">
        (It's always DNS, or maybe you just mistyped the URL)
      </p>

      <div class="flex gap-4">
        <Button asChild>
          <a href="/">Go Home</a>
        </Button>
        <Button variant="outline" asChild>
          <a href="/blog">Read Blog</a>
        </Button>
      </div>

      <!-- Optional: Search or popular links -->
      <div class="mt-12 text-sm text-muted-foreground">
        <p class="mb-2">Looking for something specific? Try these:</p>
        <div class="flex gap-4 justify-center">
          <a href="/projects" class="hover:text-foreground transition-colors">Projects</a>
          <span>·</span>
          <a href="/now" class="hover:text-foreground transition-colors">Now</a>
          <span>·</span>
          <a href="/uses" class="hover:text-foreground transition-colors">Uses</a>
          <span>·</span>
          <a href="mailto:contact@heyjoseph.me" class="hover:text-foreground transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
