---
import Layout from "../layouts/Layout.astro";
import { Projects } from "../components/Projects";

const title = "Projects - Joseph Ju";
const description =
  "Explore my portfolio of web applications built with Ruby on Rails, Next.js, and React. From health tracking to financial tools for life in Japan.";
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-12">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">My Projects</h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        A collection of web applications I've built, from health tracking tools
        to financial calculators for expat life in Japan.
      </p>
    </div>

    <!-- All Projects (no limit) -->
    <Projects limit={999} className="" />

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <h2 class="text-2xl font-semibold mb-4">
        Interested in working together?
      </h2>
      <p class="text-muted-foreground mb-6">
        I'm always open to discussing new projects and opportunities.
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="mailto:contact@heyjoseph.me"
          class="inline-flex items-center px-6 py-3 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
        >
          Get in Touch
        </a>
        <a
          href="/blog"
          class="inline-flex items-center px-6 py-3 border border-border rounded-md hover:bg-accent hover:text-accent-foreground transition-colors"
        >
          Read My Blog
        </a>
      </div>
    </div>
  </div>
</Layout>
